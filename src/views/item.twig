<html lang="en">

    {{ include('head.html') }}
	
    <body>
	
		{{ include('header.html') }}
        <div class="container">
			<table class="table table-dark">
				<tbody>
					<tr class="d-flex">
						<td class="col-xs-1"><a href="">^</a></td>
						<td class="col-xl">
							<a href="{{ story.url }}">
								{{ story.title }}
							</a> </br>
							<span>
								{{ story.score }} points by 
								<a href="/HN/user/{{ story.by }}">{{ story.by }}</a>
								| <a href="/HN/item/{{ story.id }}">{{ story.time }} </a>
								| Hide 
								| <a href="/HN/item/{{ story.id }}">{{ story.descendants }} Comments </a>
							</span>
						</td>
					</tr>
					{% if story.text is defined %}
						<tr class="d-flex">
						<td colspan="2">
							<span> {{ story.text }} </span>
						</td>
					</tr>
					{% endif %}
				</tbody>
			</table>
		
		
			{% for comment in story.comments %}
				{% include "comment.twig" with {'comment':comment} only %}
			{% endfor %}
		</div>

    </body>
</html>