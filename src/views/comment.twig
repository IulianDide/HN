<div class="row">
	<div class="col-lg-12 ml-5">
		<span>^</span>
		<span><a href="/HN/user/{{ comment.by }}">{{ comment.by }}</a></span>
		<span>{{ comment.time}}</span>
		<span><a data-toggle="collapse" href="#collapse-{{ comment.id }}">[+] </a></span><br/>
		<span id="collapse-{{ comment.id }}"> {{ comment.text }}
			</br><span><a href="#">Reply</a></span>
		</span>
		
		{% for childComment in comment.comments %}
				{% include "comment.twig" with {'comment':childComment} only %}
		{% endfor %}
	</div>
</div>