<html lang="en">

    {{ include('head.html') }}
	
    <body>
	    
		{{ include('header.html') }}
        
		<div class="container">
		<table class="table table-dark">
			<tbody>
			{% for key,story in stories %}
				<tr class="d-flex">
					<td class="col-xs-1">{{ key }}</td>
					<td class="col-xs-1"><a href="">^</a></td>
					<td class="col-xl">
						<a href="{{ story.url }}">
							{{ story.title }}
						</a> </br>
						<span>
							{{ story.score }} points by 
							<a href="/HN/user/{{ story.by }}">{{ story.by }}</a>
							| <a href="/HN/item/{{ story.id }}">{{ story.time }} </a>
							| Hide 
							| <a href="/HN/item/{{ story.id }}">{{ story.descendants }} Comments </a>
						</span>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>

        <h1><a href="/HN/{{ nextPage }}">More</a></h1>
    </body>
</html>